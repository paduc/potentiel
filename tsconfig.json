{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "typeRoots": ["./src/types", "node_modules/@types"],
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": ["src/**/*", "src/__tests__/**/*", "scripts"],
  "exclude": [
    "node_modules",
    "features",
    "**/*.spec.ts",
    "**/*.integration.ts",
    "cypress",
    "cypress/**/*",
    "scripts"
  ]
}
